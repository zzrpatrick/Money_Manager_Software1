<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="comp3350.moneymanager.presentation.HomeActivity">

    <TextView
        android:id="@+id/homeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:text="MONEY MANAGER"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#424242"
        android:textSize="60dp"/>

    <Button
        android:id="@+id/homeStartButton"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="222dp"
        android:onClick="startClick"
        android:text="Start"
        android:textColor="#424242"/>

    <TextView
        android:id="@+id/homeCreateAccPrint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/homeStartButton"
        android:layout_centerHorizontal="true"
        android:text="Create your account now!"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#424242"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/homeSelectAccPrint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/homeNextButton"
        android:layout_centerHorizontal="true"
        android:text="Select an existing account!"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#424242"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/homeNextButton"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/homeCreateAccPrint"
        android:layout_alignLeft="@+id/homeStartButton"
        android:layout_alignStart="@+id/homeStartButton"
        android:layout_marginBottom="147dp"
        android:onClick="homeNextClick"
        android:text="Next"
        android:textColor="#424242"/>
</RelativeLayout>
